{
  "name": "seimoney-backend",
  "version": "1.0.0",
  "description": "Production-grade backend for SeiMoney DeFi dApp on Sei Network",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "dev:api-gateway": "tsx watch src/services/api-gateway/index.ts",
    "dev:indexer": "tsx watch src/services/indexer/index.ts",
    "dev:scheduler": "tsx watch src/services/scheduler/index.ts",
    "dev:notifier": "tsx watch src/services/notifier/index.ts",
    "dev:oracles": "tsx watch src/services/oracles/index.ts",
    "test:sdk": "node test-sdk.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "dependencies": {
    "@cosmjs/cosmwasm-stargate": "^0.32.2",
    "@cosmjs/proto-signing": "^0.32.2",
    "@cosmjs/stargate": "^0.32.2",
    "@fastify/cors": "^9.0.1",
    "@fastify/jwt": "^8.0.0",
    "@fastify/rate-limit": "^9.0.0",
    "@prisma/client": "^5.7.1",
    "axios": "^1.11.0",
    "bullmq": "^5.0.0",
    "dotenv": "^16.3.1",
    "fastify": "^4.24.3",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "node-telegram-bot-api": "^0.64.0",
    "nodemailer": "^6.9.7",
    "web-push": "^3.6.6",
    "winston": "^3.11.0",
    "ws": "^8.14.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "@types/node-telegram-bot-api": "^0.64.0",
    "@types/nodemailer": "^6.4.14",
    "@types/web-push": "^3.6.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^30.0.5",
    "prettier": "^3.1.0",
    "prisma": "^5.7.1",
    "ts-jest": "^29.4.1",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "sei-network",
    "cosmwasm",
    "defi",
    "blockchain",
    "backend",
    "typescript"
